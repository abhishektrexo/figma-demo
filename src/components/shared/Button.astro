---
interface Props {
  text: string;
  href?: string;
  type?: "button" | "submit";
  id?: string;
  className?: string;
  variant?: "primary" | "secondary";
}

const { 
  text, 
  href, 
  type = "button", 
  id, 
  className = "", 
  variant = "primary" 
} = Astro.props;
---

{href ? (
  <a href={href} id={id} class={`common-btn ${variant} ${className}`}>
    <span class="btn-text">{text}</span>
    <div class="btn-loader"></div>
  </a>
) : (
  <button type={type} id={id} class={`common-btn ${variant} ${className}`}>
    <span class="btn-text">{text}</span>
    <div class="btn-loader"></div>
  </button>
)}

<style is:global>
  .common-btn {
    display: inline-flex;
    height: 40px;
    padding: var(--Margin-md, 8px) var(--Margin-xl, 16px);
    justify-content: center;
    align-items: center;
    gap: var(--Margin-sm, 4px);
    border-radius: var(--Radius-Large, 8px);
    background: var(--Colors-Primary-Primary, #005CB9);
    
    white-space: nowrap; /* Prevents text wrapping */
    position: relative;
    text-decoration: none !important;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    overflow: hidden;
    box-sizing: border-box;
  }

  .btn-text {
    color: var(--Colors-White, #FEFEFE);
    font-family: var(--font-family-title, Lato);
    font-size: var(--font-size-sm, 16px);
    font-style: normal;
    font-weight: var(--font-weight-Regular, 400);
    line-height: var(--font-line-height-sm, 24px); /* 150% */
    z-index: 2;
  }

  .common-btn.secondary .btn-text {
    color: #005cb9;
  }

  .common-btn.primary:hover {
    background: #004a95;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 92, 185, 0.3);
  }

  .common-btn.secondary {
    background: transparent;
    color: #005cb9;
    border: 1px solid #005cb9;
  }

  .common-btn.secondary:hover {
    background: rgba(0, 92, 185, 0.05);
    transform: translateY(-2px);
  }

  /* Interaction States */
  .common-btn.loading .btn-text {
    opacity: 0;
  }

  .common-btn .btn-loader {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 20px;
    border: 3px solid rgba(255, 255, 255, 0.3);
    border-top-color: #fff;
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .common-btn.loading .btn-loader {
    opacity: 1;
    animation: btn-spin 0.8s linear infinite;
  }

  @keyframes btn-spin {
    to { transform: translate(-50%, -50%) rotate(360deg); }
  }

  @media (max-width: 640px) {
    .common-btn {
      width: 100%;
    }
  }
</style>
