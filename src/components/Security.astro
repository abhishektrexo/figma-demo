---
const securityNodes = [
  {
    icon: "/assets/isolation.svg",
    title: "Data Isolation",
    description: "Each client's data is logically isolatedâ€”no cross-client access"
  },
  {
    icon: "/assets/audit.svg",
    title: "Audit Trails & Logs",
    description: "Complete traceability for every action"
  },
  {
    icon: "/assets/soc2.svg",
    title: "SOC 2 Type II",
    description: "Independently audited to meet SOC 2 standards for security, availability, and confidentiality."
  },
  {
    icon: "/assets/mfa.svg",
    title: "Two-Factor Authentication (2FA)",
    description: "Adds an extra layer of security by requiring a second verification step during login."
  },
  {
    icon: "/assets/standardize.svg",
    title: "USPTO / WIPO aligned workflows",
    description: "Aligned with USPTO and WIPO filing standards."
  }
];
---
<section class="security">
  <div class="security-container">
    <div class="security-header">
      <h2 class="security-title">Built for the Highest Standards of IP Security</h2>
      <p class="security-subtitle">JUNE ensures your data stays protected, compliant, and always within your reach.</p>
    </div>

    <div class="security-diagram">
      <div class="diagram-center">
        <img src="/assets/security_center.svg" alt="Security Center" class="center-icon" />
        <div class="pulse-ring"></div>
      </div>
      
      <div class="nodes-container">
        {securityNodes.map((node, index) => (
          <div class={`security-node node-${index}`}>
            <div class="node-icon-box">
              <img src={node.icon} alt={node.title} />
            </div>
            <div class="node-content">
              <h3>{node.title}</h3>
              <p>{node.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .security {
    padding: var(--section-padding);
    background-color: var(--color-white);
    overflow: hidden;
  }

  .security-container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: var(--content-padding);
  }

  .security-header {
    text-align: center;
    margin-bottom: 80px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .security-title {
    font-family: var(--font-family);
    font-size: 40px;
    font-weight: 700;
    color: var(--color-dark);
    margin-bottom: 24px;
  }

  .security-subtitle {
    font-family: var(--font-family);
    font-size: 20px;
    color: #666;
    line-height: 1.5;
  }

  .security-diagram {
    position: relative;
    height: 600px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  @media (max-width: 768px) {
    .security-diagram {
      height: auto;
      flex-direction: column;
      gap: 30px;
      padding-top: 40px;
    }
    .diagram-center, .pulse-ring, .nodes-container {
      position: static;
      transform: none !important;
    }
    .nodes-container {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
    .security-node {
      position: static;
      flex-direction: row !important;
      text-align: left !important;
      max-width: 100%;
    }
    .node-content h3 {
       font-size: 16px;
    }
  }

  .diagram-center {
    position: relative;
    z-index: 2;
    width: 200px;
    height: 200px;
    background: white;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0px 20px 40px rgba(0, 92, 185, 0.1);
  }

  .center-icon {
    width: 60%;
    height: 60%;
  }

  .pulse-ring {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 2px solid var(--color-primary);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% { transform: scale(1); opacity: 0.5; }
    100% { transform: scale(1.5); opacity: 0; }
  }

  .nodes-container {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }

  .security-node {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 16px;
    max-width: 300px;
  }

  .node-icon-box {
    width: 56px;
    height: 56px;
    background: white;
    border-radius: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0px 8px 24px rgba(0, 0, 0, 0.08);
    flex-shrink: 0;
  }

  .node-icon-box img {
    width: 32px;
    height: 32px;
  }

  .node-content h3 {
    font-family: var(--font-family);
    font-size: 18px;
    font-weight: 700;
    color: var(--color-dark);
    margin-bottom: 4px;
  }

  .node-content p {
    font-family: var(--font-family);
    font-size: 14px;
    color: #666;
    line-height: 1.4;
  }

  /* Positioning nodes in a circle/pattern based on Figma coordinates */
  .node-0 { top: 10%; left: 10%; } /* Data Isolation */
  .node-1 { top: 60%; left: 5%; } /* Audit Trails */
  .node-2 { bottom: 5%; left: 50%; transform: translateX(-50%); } /* SOC2 */
  .node-3 { top: 60%; right: 5%; flex-direction: row-reverse; text-align: right; } /* 2FA */
  .node-4 { top: 10%; right: 10%; flex-direction: row-reverse; text-align: right; } /* USPTO */

</style>
