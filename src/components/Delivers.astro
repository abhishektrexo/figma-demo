---
const title = "What JUNE Delivers";
const subtitle = "JUNE is your trusted assistant for smarter IP management—delivering efficiency, compliance, and results at scale.";

const deliversItems = [
  {
    icon: "/assets/validate.svg",
    title: "Validate",
    description: "Verify bibliographic details, priority claims, and assignee data with bulk downloads across jurisdictions—minimizing errors."
  },
  {
    icon: "/assets/generate.svg",
    title: "Generate Documents",
    description: "Instantly create POA transmittals, 3.73 statements, and Office Action shells—automated from case data and claims."
  },
  {
    icon: "/assets/search.svg",
    title: "Search & Download",
    description: "Bulk-download US & non-US patents with translations, manage IDS references, and auto-calculate USPTO fees."
  },
  {
    icon: "/assets/standardize.svg",
    title: "Standardize",
    description: "Convert PDFs into USPTO-compliant formats and maintain consistent, accurate IP records."
  }
];
---
<section class="delivers">
  <div class="delivers-container">
    <div class="delivers-card-wrapper">
      <div class="delivers-header">
        <h2 class="section-title">{title}</h2>
        <p class="section-subtitle">{subtitle}</p>
      </div>

      <div class="delivers-items-list">
        {deliversItems.map((item, index) => (
          <div class="delivers-row">
            <div class="delivers-text-content">
               <h3>• {item.title}:</h3>
               <p>{item.description}</p>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Bottom Icons Row from Figma -->
      <div class="delivers-bottom-icons">
         <div class="bottom-icon-circle"><img src="/assets/validate.svg" alt="" /></div>
         <div class="bottom-icon-rect"><img src="/assets/search.svg" alt="" /></div>
         <div class="bottom-icon-rect"><img src="/assets/generate.svg" alt="" /></div>
         <div class="bottom-icon-circle"><img src="/assets/standardize.svg" alt="" /></div>
      </div>
    </div>
  </div>
</section>

<style>
  .delivers {
    background-color: #1a1a1a; /* Match Stats Dark Background */
    padding: var(--section-padding);
    padding-bottom: 120px; /* Extra spacing at bottom */
  }

  .delivers-container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: var(--content-padding);
  }

  .delivers-card-wrapper {
    background: #e6eef5; /* Light grey/blueish card background */
    border-radius: 32px;
    padding: 80px 100px;
  }

  .delivers-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-title {
    font-family: var(--font-family);
    font-size: 36px;
    font-weight: 700;
    color: var(--color-dark);
    margin-bottom: 16px;
  }
  
  .section-subtitle {
     font-family: var(--font-family);
     font-size: 18px;
     color: #444; /* Darker than grey */
     max-width: 700px;
     margin: 0 auto;
     line-height: 1.5;
  }

  .delivers-items-list {
     display: flex;
     flex-direction: column;
     gap: 12px;
     margin-bottom: 80px;
     max-width: 900px;
     margin-left: auto;
     margin-right: auto;
  }
  
  .delivers-row {
     display: flex;
     gap: 10px;
  }
  
  .delivers-text-content h3 {
     display: inline;
     font-weight: 900;
     font-size: 16px;
     color: #222;
  }
  
  .delivers-text-content p {
     display: inline;
     font-size: 16px;
     color: #444;
     line-height: 1.6;
  }
  
  .delivers-bottom-icons {
     display: flex;
     justify-content: center;
     gap: 60px;
     align-items: center;
  }
  
  .bottom-icon-circle, .bottom-icon-rect {
     background: transparent;
     /* Actually these look like big colored icons in screenshot */
     width: 100px;
     height: 100px;
     display: flex;
     justify-content: center;
     align-items: center;
  }
  
  .bottom-icon-circle img, .bottom-icon-rect img {
     width: 100%;
     height: 100%;
     object-fit: contain;
  }

  @media (max-width: 900px) {
    .delivers-card-wrapper {
       padding: 40px 20px;
    }
    .delivers-bottom-icons {
       flex-wrap: wrap;
       gap: 30px;
    }
    .bottom-icon-circle, .bottom-icon-rect {
       width: 60px;
       height: 60px;
    }
    .delivers-items-list {
       text-align: left;
    }
  }
</style>
