---
const stats = [
  { value: "96%", label: "Automated SLA Compliance", description: "On-time delivery against agreed service levels." },
  { value: "110X", label: "Faster Turnaround", description: "Quick delivery with improved speed." },
  { value: "85%", label: "Efficiency Gain", description: "Improved performance through smarter processes." },
  { value: "80%", label: "Reduced Time", description: "Minimized turnaround for quicker delivery." },
  { value: "70%", label: "Better Utilisation", description: "Maximizing efficiency through smarter resource use." },
  { value: "631%", label: "Volume Throughput via Automation", description: "The amount of workload or transactions processed within a given time." },
];
---
<section class="stats">
  <div class="stats-container">
    <div class="stats-grid">
      {stats.map(stat => (
        <div class="stat-item">
          <h3 class="stat-value">{stat.value}</h3>
          <h4 class="stat-label">{stat.label}</h4>
          <p class="stat-desc">{stat.description}</p>
        </div>
      ))}
    </div>
    
    <div class="stats-graphic">
       <!-- CSS Fan Chart Placeholder -->
       <div class="fan-chart-placeholder">
          <div class="fan-segment seg-1"></div>
          <div class="fan-segment seg-2"></div>
          <div class="fan-segment seg-3"></div>
          <div class="fan-segment seg-4"></div>
       </div>
    </div>
  </div>
</section>

<style>
  .stats {
    background-color: #1a1a1a; /* Dark background */
    padding: var(--section-padding);
    padding-top: 120px;
    padding-bottom: 120px;
    color: white;
    position: relative;
    z-index: 5;
    margin-top: -100px; /* Pull up to overlap/connect with hero if needed */
  }

  .stats-container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: var(--content-padding);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 60px;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* 2 cols */
    gap: 60px 40px; /* Larger vertical gap */
    flex: 1;
    max-width: 700px;
  }

  .stat-item {
    text-align: left;
  }

  .stat-value {
    font-family: var(--font-family);
    font-size: 56px;
    font-weight: 700;
    color: var(--color-white);
    margin-bottom: 8px;
    line-height: 1;
  }

  .stat-label {
    font-family: var(--font-family);
    font-size: 18px;
    font-weight: 700;
    color: var(--color-white);
    margin-bottom: 8px;
  }

  .stat-desc {
    font-family: var(--font-family);
    font-size: 14px;
    line-height: 1.5;
    color: #ccc; /* Lighter text for description */
    max-width: 250px;
  }

  .stats-graphic {
     flex: 0 0 400px;
     display: flex;
     justify-content: center;
     align-items: center;
     height: 400px;
  }

  /* CSS Fan Chart Placeholder */
  .fan-chart-placeholder {
     width: 400px;
     height: 200px;
     position: relative;
     overflow: hidden;
     /* display: flex; */
  }
  
  .fan-segment {
     position: absolute;
     bottom: 0;
     left: 50%;
     transform-origin: bottom left; /* Pivot from bottom center relative to parent? No, tricky with CSS sectors. */
     /* Easier approach: solid semicircles rotated */
     width: 100%;
     height: 100%;
     border-radius: 200px 200px 0 0;
     /* This placeholder is simplified. For real fan, need SVG or complex CSS. */
  }
  
  /* Simple placeholder approximation using overlapping circles/sectors */
  .fan-segment {
     transform-origin: 50% 100%;
     width: 300px;
     height: 150px;
     border-radius: 150px 150px 0 0;
     left: 50px;
  }
  
  .seg-1 { background: #00AEEF; transform: rotate(-60deg); z-index: 1; }
  .seg-2 { background: #0072BC; transform: rotate(-30deg); z-index: 2; }
  .seg-3 { background: #2E3192; transform: rotate(0deg); z-index: 3; }
  .seg-4 { background: #8FD6F4; transform: rotate(30deg); z-index: 4; }


  @media (max-width: 900px) {
    .stats-container {
      flex-direction: column;
      gap: 60px;
    }
    .stats-grid {
      width: 100%;
      grid-template-columns: 1fr;
      text-align: center;
    }
    .stat-item {
       text-align: center;
       display: flex;
       flex-direction: column;
       align-items: center;
    }
    .stats {
       margin-top: 0;
       border-radius: 0;
    }
  }
</style>
