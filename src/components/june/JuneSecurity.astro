---
const securityFeatures = [
  {
    id: "data-isolation",
    title: "Data Isolation",
    description: "Each client's data is logically isolated—no cross-client access",
    icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/9PGrSqRY1Q.png", // Filter icon
    color: "#00c389", // Green
    position: "left-top"
  },
  {
    id: "audit-trails",
    title: "Audit Trails & Logs",
    description: "Complete traceability for every action",
    icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/rovX2BixQL.png", // Audit icon
    color: "#00a3e0", // Light Blue
    position: "left-bottom"
  },
  {
    id: "soc2",
    title: "SOC 2 Type II",
    description: "Independently audited to meet SOC 2 standards for security, availability, and confidentiality of customer data.",
    icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/GFVbR42syk.png", // SOC 2 icon
    color: "#ffc72c", // Yellow
    position: "center-bottom"
  },
  {
    id: "2fa",
    title: "Two-Factor Authentication (2FA)",
    description: "Adds an extra layer of security by requiring a second verification step during login.",
    icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/0AcUZL78hQ.png", // 2FA icon
    color: "#005cb9", // Trexo Blue
    position: "right-bottom"
  },
  {
    id: "uspto",
    title: "USPTO / WIPO aligned workflows",
    description: "Aligned with USPTO and WIPO filing standards.",
    icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/jpFwUzR9ed.png", // Workflow icon
    color: "#ff8200", // Orange
    position: "right-top"
  }
];
---
<section class="june-security">
  <div class="centered-container">
    <div class="security-intro">
      <p class="trusted-text">JUNE is your trusted assistant for smarter IP management—delivering efficiency, compliance, and results at scale.</p>
    </div>

    <div class="orbital-graphic">
      <!-- Background Arc -->
      <div class="orbit-arc"></div>
      
      <!-- Central Hub -->
      <div class="central-hub">
        <div class="hub-circle">
          <img src="https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/ZaWWyzxdEZ.png" alt="Lock" class="lock-icon" />
        </div>
      </div>

      <!-- Security Bubbles -->
      <div class="bubbles-container">
        {securityFeatures.map(f => (
          <div class={`security-bubble ${f.id} ${f.position}`}>
            <div class="bubble-content">
              <div class="icon-circle" style={`border-color: ${f.color}`}>
                <img src={f.icon} alt={f.title} />
                <div class="connecting-dot" style={`background-color: ${f.color}`}></div>
              </div>
              <div class="bubble-text">
                <h3>{f.title}</h3>
                <p>{f.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .june-security {
    background-color: #242428;
    color: white;
    padding: 120px 0 160px;
    overflow: hidden;
  }

  .security-intro {
    text-align: center;
    max-width: 900px;
    margin: 0 auto 100px;
    padding: 0 40px;
  }

  .trusted-text {
    font-family: 'Lato', sans-serif;
    font-size: 28px;
    line-height: 1.5;
    font-weight: 500;
    color: #ffffff;
  }

  .orbital-graphic {
    position: relative;
    max-width: 1200px;
    height: 600px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }

  .orbit-arc {
    position: absolute;
    top: 150px;
    width: 600px;
    height: 300px;
    border: 2px dashed rgba(255, 255, 255, 0.2);
    border-radius: 300px 300px 0 0;
    border-bottom: 0;
    transform: rotate(180deg); /* Flip to be a bottom arc */
  }

  .central-hub {
    position: absolute;
    top: 50px;
    z-index: 10;
  }

  .hub-circle {
    width: 200px;
    height: 200px;
    background-color: white;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 0 50px rgba(0, 92, 185, 0.3);
  }

  .lock-icon {
    width: 80px;
    height: auto;
  }

  /* Bubbles Positioning Logic */
  .bubbles-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .security-bubble {
    position: absolute;
    width: 280px;
  }

  .bubble-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
    text-align: center;
  }

  .icon-circle {
    width: 120px;
    height: 120px;
    background-color: white;
    border-radius: 50%;
    padding: 25px;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 3px solid transparent;
    position: relative;
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
  }

  .icon-circle img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .connecting-dot {
    position: absolute;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    top: -6px;
    left: 50%;
    transform: translateX(-50%);
  }

  .bubble-text h3 {
    font-family: 'Lato', sans-serif;
    font-size: 18px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 8px;
  }

  .bubble-text p {
    font-family: 'Lato', sans-serif;
    font-size: 14px;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.4;
  }

  /* Specific Bubble Placement based on Figma/HTML coordinates approx */
  .data-isolation {
    left: 10%;
    top: 150px;
  }

  .audit-trails {
    left: 20%;
    top: 350px;
  }

  .soc2 {
    left: 50%;
    top: 450px;
    transform: translateX(-50%);
  }

  .2fa {
    right: 20%;
    top: 350px;
  }

  .uspto {
    right: 10%;
    top: 150px;
  }

  /* Responsive - simpler layout for smaller screens */
  @media (max-width: 1100px) {
    .orbital-graphic {
      height: auto;
      flex-direction: column;
      align-items: center;
      gap: 50px;
    }
    
    .orbit-arc { display: none; }
    
    .central-hub {
      position: relative;
      top: 0;
    }

    .bubbles-container {
      position: relative;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 40px;
      padding: 0 20px;
    }

    .security-bubble {
      position: relative;
      left: auto !important;
      right: auto !important;
      top: auto !important;
      transform: none !important;
      width: 100%;
    }
  }

  @media (max-width: 640px) {
    .trusted-text {
      font-size: 22px;
    }
    
    .hub-circle {
      width: 140px;
      height: 140px;
    }
    
    .lock-icon {
      width: 50px;
    }
  }
</style>
