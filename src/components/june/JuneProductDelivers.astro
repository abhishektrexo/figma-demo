---
const features = [
  {
    title: "Validate",
    description: "Verify bibliographic details, priority claims, and assignee data with bulk downloads across jurisdictions—minimizing errors.",
    icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/TsVwg2s5bD.png"
  },
  {
    title: "Generate Documents",
    description: "Instantly create POA transmittals, 3.73 statements, and Office Action shells—automated from case data and claims.",
    icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/2bPiqX8b8F.png"
  },
  {
    title: "Search & Download",
    description: "Bulk-download US & non-US patents with translations, manage IDS references, and auto-calculate USPTO fees.",
    icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/p54gHviNcQ.png"
  },
  {
    title: "Standardize",
    description: "Convert PDFs into USPTO-compliant formats and maintain consistent, accurate IP records.",
    icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/QL9SuObrmt.png"
  }
];
---
<section class="june-delivers section-padding">
  <div class="centered-container">
    <div class="delivers-card">
      <h2 class="delivers-title">What JUNE Delivers</h2>
      <div class="features-grid">
        {features.map(feature => (
          <div class="feature-item">
            <div class="feature-icon">
              <img src={feature.icon} alt={feature.title} />
            </div>
            <div class="feature-content">
              <h3 class="feature-title">{feature.title}</h3>
              <p class="feature-description">{feature.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .june-delivers {
    background-color: var(--bg-dark);
    padding: 100px 0;
  }

  .delivers-card {
    background-color: var(--bg-light);
    border-radius: 24px;
    padding: 80px 60px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    max-width: 1200px;
    margin: 0 auto;
  }

  .delivers-title {
    font-family: 'Lato', sans-serif;
    font-size: 44px;
    font-weight: 700;
    color: var(--text-dark);
    text-align: center;
    margin-bottom: 80px;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
  }

  .feature-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 32px;
  }

  .feature-icon {
    width: 100%;
    max-width: 200px;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .feature-icon img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .feature-title {
    font-family: 'Lato', sans-serif;
    font-size: 20px;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 12px;
  }

  .feature-description {
    font-family: 'Lato', sans-serif;
    font-size: 15px;
    line-height: 1.6;
    color: var(--text-dark);
    opacity: 0.9;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
    }
  }

  @media (max-width: 640px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
    
    .delivers-title {
      font-size: 32px;
      margin-bottom: 40px;
    }
    
    .delivers-card {
      padding: 40px 20px;
    }
  }
</style>
