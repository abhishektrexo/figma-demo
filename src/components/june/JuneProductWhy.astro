---
const reasons = [
  {
    id: "01",
    title: "Faster, automated IP workflows",
    icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/CBsWS1B0Nn.png"
  },
  {
    id: "02",
    title: "Standardized, error-free processes",
    icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/eaof1Kp60z.png"
  },
  {
    id: "03",
    title: "Scalable for growing IP portfolios",
    icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/USAzguyZyc.png"
  },
  {
    id: "04",
    title: "Improved compliance & accuracy",
    icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/gT3h6Mu1zi.png"
  },
  {
    id: "05",
    title: "Competitive advantage through efficiency",
    icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/3FsxiWBFo7.png"
  }
];
---
<section class="june-why section-padding">
  <div class="centered-container">
    <div class="why-header">
      <h2 class="why-title">Why Choose JUNE</h2>
      <p class="why-subtitle">Built for IP professionals who demand accuracy, June simplifies complex filings with intelligent automation and complete transparency.</p>
    </div>
    
    <div class="why-content">
      <div class="reasons-list">
        {reasons.map(reason => (
          <div class="reason-item">
            <div class="reason-icon">
              <img src={reason.icon} alt={reason.title} />
            </div>
            <div class="reason-title">{reason.title}</div>
          </div>
        ))}
      </div>
      
      <div class="why-imagery">
        <div class="image-column img-left">
          <img src="https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/FcpzibhtCv.png" alt="Branding" />
        </div>
        <div class="image-column img-middle">
          <img src="https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/0BJUOx5baZ.png" alt="High-rise" />
        </div>
        <div class="image-column img-right">
          <img src="https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/hpPMBvodo1.png" alt="Laptop" />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .june-why {
    background-color: var(--bg-dark);
    padding: 0;
  }

  .why-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 100px auto;
    padding: 0 40px;
  }

  .why-title {
    font-family: 'Lato', sans-serif;
    font-size: 44px;
    font-weight: 700;
    color: var(--text-white);
    margin-bottom: 32px;
  }

  .why-subtitle {
    font-family: 'Lato', sans-serif;
    font-size: 20px;
    line-height: 1.5;
    color: var(--text-white);
    opacity: 0.9;
  }

  .why-content {
    display: flex;
    gap: 40px;
    align-items: flex-start;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 40px;
    position: relative;
  }

  .reasons-list {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 12px;
    z-index: 2;
  }

  .reason-item {
    display: flex;
    align-items: center;
    background: #f3f7fc;
    padding: 32px 40px;
    border-radius: 12px;
    gap: 24px;
    transition: transform 0.3s;
  }

  .reason-item:hover {
    transform: translateX(10px);
  }

  .reason-icon {
    width: 60px;
    height: 60px;
    flex-shrink: 0;
  }

  .reason-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .reason-title {
    flex: 1;
    font-family: 'Lato', sans-serif;
    font-size: 20px;
    font-weight: 400;
    color: var(--text-dark);
    line-height: 1.2;
  }

  .why-imagery {
    flex: 1.5;
    display: flex;
    gap: 24px;
    height: 772px;
    position: relative;
  }

  .image-column {
    width: 199px;
    height: 581px;
    border-radius: 8px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .image-column img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .img-left {
    margin-top: 3px;
  }

  .img-middle {
    margin-top: 191px;
  }

  .img-right {
    margin-top: 66px;
  }

  /* Responsive Design */
  @media (max-width: 1100px) {
    .why-content {
      flex-direction: column;
      gap: 60px;
    }
    
    .why-imagery {
      width: 100%;
      height: auto;
      flex-wrap: wrap;
      justify-content: center;
    }
    
    .image-column {
      margin-top: 0 !important;
      width: 30%;
      height: 400px;
    }

    .reasons-list {
      width: 100%;
    }
  }

  @media (max-width: 768px) {
    .why-title {
      font-size: 32px;
    }
    
    .reason-item {
      padding: 20px 24px;
    }
    
    .reason-title {
      font-size: 18px;
    }

    .image-column {
      width: 45%;
      height: 300px;
    }
  }
</style>
