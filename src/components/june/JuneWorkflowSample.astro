---
const manualSteps = [
  "Fill in Bibliographic Data",
  "Add Claim Rejections/Objections",
  "Add Claim Set",
  "Attorney Review",
  "OA Shell Draft Prepared"
];

const juneSteps = [
  "Provide Application Number",
  "System Fetches (Bib data, Capture claim rejection)",
  "OA shell Draft Prepared with Cited References"
];
---
<section class="workflow-sample section-padding">
  <div class="centered-container">
    <div class="workflow-card">
      <div class="workflow-header">
        <h2 class="workflow-title">
          One of our IP Workflow Sample for <span class="highlight">OA Shell Draft</span>
        </h2>
      </div>
      
      <div class="comparison-grid">
        <div class="workflow-column manual">
          <h3 class="column-title">Manual Way</h3>
          <div class="steps-container">
            {manualSteps.map((step, i) => (
              <div class="step-box">
                <span class="step-text">{step}</span>
              </div>
            ))}
            <div class="connector-line"></div>
          </div>
        </div>
        
        <div class="workflow-column june">
          <h3 class="column-title">June Way</h3>
          <div class="steps-container">
            {juneSteps.map((step, i) => (
              <div class="step-box highlight">
                <span class="step-text">{step}</span>
              </div>
            ))}
            <div class="connector-line highlight"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .workflow-sample {
    background-color: var(--bg-dark);
    padding: 100px 0;
  }

  .workflow-card {
    background-color: var(--bg-light);
    border-radius: 24px;
    padding: 80px 60px;
    max-width: 1200px;
    margin: 0 auto;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .workflow-header {
    text-align: center;
    margin-bottom: 80px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .workflow-title {
    font-family: 'Lato', sans-serif;
    font-size: 36px;
    font-weight: 700;
    color: var(--text-dark);
    line-height: 1.3;
  }

  .workflow-title .highlight {
    color: var(--primary-blue);
  }

  .comparison-grid {
    display: flex;
    gap: 100px;
    justify-content: center;
  }

  .workflow-column {
    flex: 1;
    max-width: 450px;
  }

  .column-title {
    font-family: 'Lato', sans-serif;
    font-size: 26px;
    font-weight: 700;
    color: var(--primary-blue);
    margin-bottom: 40px;
    text-align: center;
  }

  .steps-container {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .step-box {
    background: #ffffff;
    border: 1px solid #eef2f6;
    padding: 18px 24px;
    border-radius: 12px;
    z-index: 2;
    transition: transform 0.2s, box-shadow 0.2s;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .step-box.highlight {
    border-color: var(--primary-blue);
    background: #f0f7ff;
    box-shadow: 0 4px 12px rgba(0, 92, 185, 0.1);
  }

  .step-text {
    font-family: 'Lato', sans-serif;
    font-size: 17px;
    color: var(--text-dark);
    line-height: 1.4;
    font-weight: 500;
  }

  .connector-line {
    position: absolute;
    left: 24px;
    top: 24px;
    bottom: 24px;
    width: 2px;
    background-color: #eef2f6;
    z-index: 1;
  }

  .connector-line.highlight {
    background-color: var(--primary-blue);
    opacity: 0.3;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .comparison-grid {
      flex-direction: column;
      align-items: center;
      gap: 60px;
    }
    
    .workflow-column {
      width: 100%;
    }
  }

  @media (max-width: 640px) {
    .workflow-title {
      font-size: 24px;
    }
    
    .workflow-card {
      padding: 40px 20px;
    }
    
    .step-text {
      font-size: 14px;
    }
  }
</style>
