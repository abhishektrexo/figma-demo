---
const manualSteps = [
  "Fill in Bibliographic Data",
  "Add Claim Rejections/Objections",
  "Add Claim Set",
  "Attorney Review",
  "OA Shell Draft Prepared"
];

const juneSteps = [
  "Provide Application Number",
  "System Fetches (Bib data, Capture claim rejection)",
  "OA shell Draft Prepared with Cited References"
];
---
<section class="workflow-sample">
  <div class="centered-container">
    <div class="workflow-card">
      <div class="workflow-header">
        <h2 class="workflow-title">
          One of our IP Workflow Sample for <span class="highlight">OA Shell Draft</span>
        </h2>
      </div>
      
      <div class="workflow-grid">
        <!-- Manual Column -->
        <div class="workflow-col">
          <h3 class="col-title">Manual Way</h3>
          <div class="timeline-container">
            <div class="vertical-line grey-bg"></div>
            <div class="steps-list">
              {manualSteps.map((step) => (
                <div class="step-item">
                  <div class="timeline-dot grey-bg"></div>
                  <span class="step-label">{step}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
        
        <!-- June Column -->
        <div class="workflow-col">
          <h3 class="col-title">June Way</h3>
          <div class="timeline-container">
            <div class="vertical-line blue-bg"></div>
            <div class="steps-list">
              {juneSteps.map((step) => (
                <div class="step-item">
                  <div class="timeline-dot blue-bg"></div>
                  <span class="step-label">{step}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .workflow-sample {
    background-color: #242428;
    padding: 100px 0 150px; /* Added more bottom padding to avoid footer overlap */
    position: relative;
    z-index: 1;
  }

  .workflow-card {
    background-color: #f3f7fc;
    border-radius: 24px;
    padding: 80px 100px;
    max-width: 1128px;
    margin: 0 auto;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    box-sizing: border-box;
  }

  .workflow-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .workflow-title {
    font-family: 'Lato', sans-serif;
    font-size: 36px;
    font-weight: 700;
    color: #232427;
    line-height: 1.3;
  }

  .workflow-title .highlight {
    color: #005cb9;
  }

  .workflow-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: start;
  }

  .workflow-col {
    display: flex;
    flex-direction: column;
  }

  .col-title {
    font-family: 'Lato', sans-serif;
    font-size: 24px;
    font-weight: 400;
    color: #000000;
    margin-bottom: 40px;
    text-align: left;
    padding-left: 20px;
  }

  .timeline-container {
    position: relative;
    padding-left: 20px;
  }

  .vertical-line {
    position: absolute;
        margin-left: 20px;

    left: 0;
    top: 8px;
    bottom: 8px;
    width: 2px;
    z-index: 1;
  }

  .grey-bg { background-color: #999999; }
  .blue-bg { background-color: #005cb9; }

  .steps-list {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .step-item {
    position: relative;
    display: flex;
    align-items: flex-start;
    z-index: 2;
  }

  .timeline-dot {
    position: absolute;
    left: -4px;
    top: 8px;
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .step-label {
    font-family: 'Lato', sans-serif;
    font-size: 18px;
    color: #000000;
    line-height: 1.4;
    font-weight: 400;
    padding-left: 30px;
  }

  /* Responsive Design */
  @media (max-width: 900px) {
    .workflow-grid {
      grid-template-columns: 1fr;
      gap: 60px;
    }
    
    .workflow-card {
      padding: 60px 40px;
    }

    .workflow-sample {
        padding-bottom: 100px;
    }
  }

  @media (max-width: 640px) {
    .workflow-title {
      font-size: 28px;
    }
    .workflow-card {
      padding: 40px 20px;
    }
  }
</style>
