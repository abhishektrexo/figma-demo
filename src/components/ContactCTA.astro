<section class="contact-cta">
  <div class="container content reveal">
    <div class="cta-box">
      <h2 class="font-serif">Ready to Secure Your Innovation?</h2>
      <p class="cta-text">Join the world's most innovative companies using TREXO to automate their IP workflow.</p>
      <div class="cta-buttons">
        <a href="/june" class="btn-primary">Get Started with JUNE</a>
        <a href="/contact" class="btn-outline">Contact Sales</a>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-cta {
    padding: 120px 0;
    background-color: var(--color-dark);
  }
  .content {
    padding: var(--content-padding);
  }
  .cta-box {
    background-color: var(--color-primary);
    border-radius: 40px;
    padding: 100px 60px;
    text-align: center;
    color: var(--color-white);
    position: relative;
    overflow: hidden;
  }
  .cta-box::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -20%;
    width: 100%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 60%);
    pointer-events: none;
  }
  h2 {
    font-family: var(--font-serif);
    font-size: 64px;
    font-weight: 400;
    margin-bottom: 24px;
    line-height: 1.1;
  }
  .cta-text {
    font-size: 20px;
    color: rgba(255, 255, 255, 0.8);
    max-width: 600px;
    margin: 0 auto 48px;
  }
  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
  }
  .btn-outline {
    display: inline-block;
    border: 1px solid var(--color-white);
    color: var(--color-white);
    padding: 14px 36px;
    border-radius: 4px;
    font-weight: 600;
    transition: all 0.3s;
  }
  .btn-outline:hover {
    background-color: var(--color-white);
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    h2 { font-size: 40px; }
    .cta-box { padding: 60px 40px; }
    .cta-buttons { flex-direction: column; }
  }
</style>
