<style>
  .navbar {
    position: absolute;
    top: 40px;
    left: 0;
    width: 100%;
    z-index: 50;
  }

  .nav-container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: var(--content-padding);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .brand-text {
    font-family: 'Lato', sans-serif;
    font-size: 26px; /* Slightly larger */
    font-weight: 900; /* Extra Black */
    color: white;
    text-decoration: none;
    letter-spacing: 2px; /* Widen spacing */
    text-transform: uppercase;
  }

  .nav-links {
    display: flex;
    gap: 50px; /* Widen gap */
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: var(--color-white);
    text-decoration: none;
    font-family: var(--font-family);
    font-size: 15px;
    font-weight: 500; /* Slightly bolder links */
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .arrow {
    font-size: 10px;
    margin-top: 2px;
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .navbar {
      top: 20px;
    }
    .nav-container {
      padding: 0 20px;
    }
    .nav-links, .nav-actions {
      display: none; /* Hide for now on mobile or add hamburger later */
    }
  }
</style>
