  /* ==========================================================
     NAVBAR RESPONSIVE OVERRIDES (moved from global.css)
     ========================================================== */
  @media (max-width: 992px) {
    .frame {
      width: 95% !important;
      margin-top: 20px !important;
    }

    .frame-1 {
      gap: 20px !important;
      width: auto !important;
    }
  }

  @media (max-width: 768px) {
    .frame {
      flex-direction: column !important;
      gap: 20px !important;
      align-items: center !important;
    }

    .frame-1 {
      width: 100% !important;
      justify-content: center !important;
      gap: 15px !important;
    }
  }

  @media (max-width: 480px) {
    .trexo-blue {
      width: 180px !important;
    }

    .frame-1 {
      flex-wrap: wrap !important;
      gap: 10px 20px !important;
    }
  }

  /* ==========================================================
     NAVBAR INTERACTION STYLES (originally scoped)
     ========================================================== */

  /* Hidden toggles - absolutely hidden */
  .nav-toggle, .sub-toggle {
    display: none !important;
  }

  /* GLOBAL RESET for Tap Highlight - Aggressive */
  html, body, .frame, .nav-menu, .nav-item, .cat-header, .dropdown-menu span, label {
    -webkit-tap-highlight-color: transparent !important;
    -webkit-touch-callout: none !important;
  }

  .hamburger-label {
    display: none;
    cursor: pointer;
    padding: 10px;
    z-index: 1000;
    user-select: none;
  }

  .hamburger-label span {
    display: block;
    width: 25px;
    height: 2px;
    background: #fdfdfd;
    margin: 5px 0;
    transition: all 0.3s ease-in-out;
  }

  /* Light Theme Overrides - No background, just text contrast */
  .frame.light-theme {
    background: transparent;
    border-bottom: none;
    box-shadow: none;
  }

  .frame.light-theme .nav-link {
    color: #232427 !important;
  }

  .frame.light-theme .nav-link:hover {
    color: #005cb9 !important;
  }

  .frame.light-theme .hamburger-label span {
    background-color: #232427;
  }

  .frame.light-theme .cat-header::after {
    border-color: #232427; /* If there's an arrow using borders */
  }

  /* Desktop Styles */
  .nav-item {
    position: relative;
    cursor: pointer;
  }

  .cat-header {
    display: flex;
    align-items: center;
    gap: 4px;
    cursor: pointer;
    text-transform: none !important;
  }

  /* Shared Typography - Matching "Home" */
  .nav-link, .dropdown-menu span, .dropdown-link {
    color: #fdfdfd !important;
    font-family: 'Lato', var(--default-font-family) !important;
    font-size: 16px !important;
    font-weight: 400 !important;
    line-height: 24px !important;
    text-decoration: none !important;
    text-transform: none !important;
  }

  .dropdown-link, .dropdown-link:link, .dropdown-link:visited, .dropdown-link:hover, .dropdown-link:active {
    color: #fdfdfd !important;
    text-decoration: none !important;
  }

  /* Desktop Dropdown Wrapper Animation */
  .dropdown-menu-wrapper {
    overflow: hidden;
    max-height: 0;
    opacity: 0;
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    z-index: 10001;
    min-width: 240px;
    border-radius: 8px;
    pointer-events: none; /* Prevent accidental hover on hidden */
  }

  .dropdown-menu {
    background: #1a1b1e;
    border: 1px solid #333;
    padding: 10px 0;
    flex-direction: column;
    box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    border-radius: 8px;
    display: flex; 
  }

  /* Show on Hover - Desktop Only */
  @media (min-width: 993px) {
    .has-dropdown:hover .dropdown-menu-wrapper {
      max-height: 500px;
      opacity: 1;
      margin-top: 10px;
      pointer-events: auto;
    }

    .has-dropdown::after {
      content: '';
      position: absolute;
      top: 100%;
      left: 0;
      width: 100%;
      height: 20px;
      z-index: 10000;
    }
  }

  .dropdown-menu span {
    padding: 10px 24px;
    white-space: nowrap;
    transition: all 0.2s;
    text-align: center;
    display: block;
  }

  .dropdown-menu span:hover,
  .dropdown-menu a:hover {
    background: #232427;
    color: #005cb9 !important;
  }

  .dropdown-link {
    display: block;
    padding: 10px 24px;
    white-space: nowrap;
    transition: all 0.2s;
    text-align: center;
  }

  /* Mobile/Tablet Styles */
  @media (max-width: 992px) {
    .hamburger-label {
      display: block;
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
    }

    .nav-menu {
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all 0.35s cubic-bezier(0.165, 0.84, 0.44, 1);
      position: absolute;
      top: 60px;
      left: 50%;
      transform: translateX(-50%) translateY(-10px);
      width: 100vw !important;
      background: #232427;
      flex-direction: column !important;
      align-items: center !important;
      padding: 40px 0 !important;
      gap: 15px !important;
      border-bottom: 1px solid #333;
      z-index: 999;
      height: calc(100vh - 60px);
      overflow-y: auto;
      justify-content: flex-start !important;
      box-sizing: border-box;
    }

    .nav-toggle:checked ~ .nav-menu {
      opacity: 1;
      visibility: visible;
      transform: translateX(-50%) translateY(0);
      display: flex !important;
    }

    .nav-item {
      width: 100%;
      text-align: center;
    }

    .cat-header {
      justify-content: center;
      width: 100%;
      padding: 12px 0;
    }

    /* Reset Desktop Wrapper Styles for Mobile */
    .dropdown-menu-wrapper {
      position: static;
      transform: none;
      min-width: 100%;
      opacity: 1; 
      max-height: 0;
      pointer-events: auto;
      transition: max-height 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
      background: rgba(255, 255, 255, 0.03);
    }

    .dropdown-menu {
      background: transparent;
      border: none;
      box-shadow: none;
      padding: 0;
      gap: 5px;
      margin: 0;
      border-radius: 0;
    }

    /* Accordion Toggle */
    .sub-toggle:checked ~ .dropdown-menu-wrapper {
      max-height: 600px;
      padding-bottom: 20px;
    }

    .sub-toggle:checked + .cat-header .active-arrow {
      transform: rotate(180deg);
    }

    .dropdown-menu span {
      padding: 8px 0;
      color: #8b8b8b !important;
      font-size: 15px !important;
    }

    /* Hamburger Animation */
    .nav-toggle:checked + .hamburger-label span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }
    .nav-toggle:checked + .hamburger-label span:nth-child(2) {
      opacity: 0;
    }
    .nav-toggle:checked + .hamburger-label span:nth-child(3) {
      transform: rotate(-45deg) translate(7px, -6px);
    }
  }
</style>
