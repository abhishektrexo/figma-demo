    <div class="nav-item has-dropdown">
      <input type="checkbox" id="resources-toggle" class="sub-toggle" />
      <label for="resources-toggle" class="cat-header">
        <span class="resources nav-link">Resources</span>
        <div class="keyboard-arrow-down active-arrow"></div>
