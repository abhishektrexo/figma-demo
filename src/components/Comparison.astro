---
const manualItems = [
  "Fill in Bibliogrpahic Data",
  "Add Claim Rejections/Objections",
  "Add Claim Set",
  "Attorney Review",
  "OA Shell Draft Prepared"
];

const juneItems = [
  "Provide Application Number",
  "System Fetches(Bib data, Capture claim rejection",
  "OA shell Draft Prepared with Cited References"
];
---
<section class="comparison">
  <div class="comparison-container">
    <div class="comparison-card">
      <h2 class="comparison-header">One of our IP Workflow Sample for OA Shell Draft</h2>
      
      <div class="comparison-grid">
        <div class="comparison-column manual-way">
          <h3 class="column-title">Manual Way</h3>
          <div class="items-list">
            {manualItems.map((item, index) => (
              <div class="item">
                <span class="item-number">{index + 1}</span>
                <p>{item}</p>
              </div>
            ))}
          </div>
        </div>

        <div class="comparison-divider">
          <div class="divider-line"></div>
          <div class="vs-badge">VS</div>
        </div>

        <div class="comparison-column june-way">
          <h3 class="column-title">June Way</h3>
          <div class="items-list">
            {juneItems.map((item, index) => (
              <div class="item active">
                <div class="item-icon">
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M16.6666 5L7.49992 14.1667L3.33325 10" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
                <p>{item}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .comparison {
    padding: var(--section-padding);
    background-color: var(--color-light); /* F3F8FC */
  }

  .comparison-container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: var(--content-padding);
  }

  .comparison-card {
    background: white;
    border-radius: 32px;
    padding: 60px;
    box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.05);
  }

  .comparison-header {
    font-family: var(--font-family);
    font-size: 28px;
    font-weight: 700;
    text-align: center;
    color: var(--color-dark);
    margin-bottom: 60px;
  }

  .comparison-grid {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 40px;
  }

  .comparison-column {
    flex: 1;
  }

  .column-title {
    font-family: var(--font-family);
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 32px;
    color: var(--color-dark);
  }

  .manual-way .column-title {
    color: #666;
  }

  .june-way .column-title {
    color: var(--color-primary);
  }

  .items-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .item {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px;
    border-radius: 12px;
    background: #f8f9fa;
    font-family: var(--font-family);
    font-size: 16px;
    color: #444;
  }

  .item-number {
    width: 24px;
    height: 24px;
    background: #ddd;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    color: #666;
    flex-shrink: 0;
  }

  .item.active {
    background: var(--color-primary);
    color: white;
    box-shadow: 0px 4px 12px rgba(0, 92, 185, 0.2);
  }

  .item-icon {
    width: 24px;
    height: 24px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .comparison-divider {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    padding-top: 80px;
  }

  .divider-line {
    width: 1px;
    height: 300px;
    background: #eee;
  }

  .vs-badge {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: white;
    padding: 8px 16px;
    border: 1px solid #eee;
    border-radius: 20px;
    font-family: var(--font-family);
    font-weight: 700;
    color: #999;
  }
</style>
