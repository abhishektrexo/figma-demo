---
const benefits = [
  {
    title: "Automated Renewal Management",
    description: "Unlock data-driven decisions with comprehensive analytics, revealing key opportunities for strategic regional growth.",
    icon: "lock"
  },
  {
    title: "Cost Transparency",
    description: "Manage and track satellite offices, ensuring consistent performance and streamlined operations everywhere.",
    icon: "globe"
  },
  {
    title: "Global Coverage",
    description: "Adapt to diverse markets with built-in localization for clear communication and enhanced user experience.",
    icon: "users"
  },
  {
    title: "Expert Support",
    description: "Generate precise, visually compelling reports that illustrate your growth trajectories across all regions.",
    icon: "chart"
  }
];
---
<section class="renewals-benefits">
  <div class="container">
    <div class="headline-and-icons">
      <div class="text">
        <h2 class="why-choose-our-patent-renewal-service">Why Choose Our Patent Renewal Service?</h2>
      </div>
      
      <div class="icons-module">
        {benefits.map(benefit => (
          <div class="icon-lockup">
            <div class={`benefit-icon ${benefit.icon}`}>
              {benefit.icon === "lock" && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>}
              {benefit.icon === "globe" && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>}
              {benefit.icon === "users" && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>}
              {benefit.icon === "chart" && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"></line><line x1="12" y1="20" x2="12" y2="4"></line><line x1="6" y1="20" x2="6" y2="14"></line></svg>}
            </div>
            <div class="lockup-text">
              <span class="benefit-title-text">{benefit.title}</span>
              <p class="benefit-desc-text">{benefit.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <div class="hero-image-c"></div>
  </div>
</section>

<style>
  .renewals-benefits {
    background-color: #242428;
    padding: 0 0 120px 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  .container {
    max-width: 1500px;
    width: 100%;
    margin: 0 auto;
    padding: 0 40px;
  }

  .headline-and-icons {
    display: flex;
    flex-direction: column;
    gap: 50px;
    padding: 80px 0 60px 0;
    border-bottom: 0.5px solid #e8e8e8;
  }

  .text {
    padding: 0 400px 0 0;
  }

  .why-choose-our-patent-renewal-service {
    color: #fdfdfd;
    font-family: 'Lato', sans-serif;
    font-size: 60px;
    font-weight: 400;
    line-height: 1.1;
    text-align: left;
    letter-spacing: -1.8px;
    margin: 0;
  }

  .icons-module {
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 20px;
    padding-top: 40px;
  }

  .icon-lockup {
    display: flex;
    flex-direction: column;
    gap: 24px;
    flex: 1;
    min-width: 265px;
    padding: 40px 20px 40px 0;
    border-bottom: 1px solid #e8e8e8;
  }

  .benefit-icon {
    width: 24px;
    height: 24px;
    color: #005cb9;
  }

  .lockup-text {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .benefit-title-text {
    color: #fdfdfd;
    font-family: 'Lato', sans-serif;
    font-size: 18px;
    font-weight: 400;
    line-height: 1;
    letter-spacing: -0.54px;
  }

  .benefit-desc-text {
    color: #6e6e6e;
    font-family: 'Lato', sans-serif;
    font-size: 18px;
    font-weight: 400;
    line-height: 1.4;
    margin: 0;
  }

  .hero-image-c {
    width: 100%;
    height: 620px;
    background: url(https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/szRKUpANNt.png) no-repeat center;
    background-size: cover;
    border-radius: 30px;
    margin-top: 50px;
  }

  @media (max-width: 1024px) {
    .text {
      padding: 0;
    }
    .why-choose-our-patent-renewal-service {
      font-size: 40px;
    }
    .hero-image-c {
        height: 400px;
    }
  }

  @media (max-width: 768px) {
    .why-choose-our-patent-renewal-service {
      font-size: 32px;
    }
    .hero-image-c {
        height: 300px;
    }
  }
</style>
