---
const benefits = [
  {
    title: "Centralized Management",
    description: "Unlock data-driven decisions with comprehensive analytics, revealing key opportunities for strategic regional growth.",
    iconUrl: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/vum0jOYV7S.png"
  },
  {
    title: "Automated Renewal Management",
    description: "Manage and track satellite offices, ensuring consistent performance and streamlined operations everywhere.",
    iconUrl: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/dfH6iQ6KGT.png"
  },
  {
    title: "Flexible Coverage",
    description: "Adapt to diverse markets with built-in localization for clear communication and enhanced user experience.",
    iconUrl: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/f7NgZx8PRz.png"
  },
  {
    title: "Secure Support",
    description: "Generate precise, visually compelling reports that illustrate your growth trajectories across all regions.",
    iconUrl: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/puQukFjkSO.png"
  }
];
---
<section class="renewals-benefits">
  <div class="container">
    <div class="headline-and-icons">
      <div class="text">
        <h2 class="why-choose-our-patent-renewal-service">Why Choose Our Patent Renewal Service?</h2>
      </div>
      
      <div class="icons-module">
        {benefits.map(benefit => (
          <div class="icon-lockup">
            <div class="benefit-icon" style={`background-image: url(${benefit.iconUrl})`}></div>
            <div class="lockup-text">
              <span class="benefit-title-text">{benefit.title}</span>
              <p class="benefit-desc-text">{benefit.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <div class="hero-image-c"></div>
  </div>
</section>

<style>
  .renewals-benefits {
    background-color: #242428;
    padding: 0 0 120px 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  .container {
    max-width: 1500px;
    width: 100%;
    margin: 0 auto;
    padding: 0 40px;
  }

  .headline-and-icons {
    display: flex;
    flex-direction: column;
    gap: 50px;
    padding: 80px 0 60px 0;
    border-bottom: 0.5px solid #e8e8e8;
  }

  .text {
    padding: 0 400px 0 0;
  }

  .why-choose-our-patent-renewal-service {
    color: #fdfdfd;
    font-family: 'Lato', sans-serif;
    font-size: 60px;
    font-weight: 400;
    line-height: 1.1;
    text-align: left;
    letter-spacing: -1.8px;
    margin: 0;
  }

  .icons-module {
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 20px;
    padding-top: 40px;
  }

  .icon-lockup {
    display: flex;
    flex-direction: column;
    gap: 24px;
    flex: 1;
    min-width: 265px;
    padding: 40px 20px 40px 0;
    border-bottom: 1px solid #e8e8e8;
  }

  .benefit-icon {
    width: 24px;
    height: 24px;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .lockup-text {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .benefit-title-text {
    color: #fdfdfd;
    font-family: 'Lato', sans-serif;
    font-size: 18px;
    font-weight: 400;
    line-height: 1;
    letter-spacing: -0.54px;
  }

  .benefit-desc-text {
    color: #6e6e6e;
    font-family: 'Lato', sans-serif;
    font-size: 18px;
    font-weight: 400;
    line-height: 1.4;
    margin: 0;
  }

  .hero-image-c {
    width: 100%;
    height: 620px;
    background: url(https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/szRKUpANNt.png) no-repeat center;
    background-size: cover;
    border-radius: 30px;
    margin-top: 80px;
  }

  @media (max-width: 1024px) {
    .text {
      padding: 0;
    }
    .why-choose-our-patent-renewal-service {
      font-size: 40px;
    }
    .hero-image-c {
        height: 400px;
    }
  }

  @media (max-width: 768px) {
    .why-choose-our-patent-renewal-service {
      font-size: 32px;
    }
    .hero-image-c {
        height: 300px;
    }
  }
</style>
