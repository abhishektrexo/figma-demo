<section class="renewals-hero">
  <div class="header">
    <h1 class="renewal-services">Renewal Services</h1>
    <div class="hero-image">
      <div class="ipad">
        <div class="inner-screen"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .renewals-hero {
    background-color: #242428;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  .header {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-self: stretch;
    flex-wrap: nowrap;
    flex-shrink: 0;
    gap: 180px; /* Precise gap from index.css */
    position: relative;
    z-index: 11;
    max-width: 1500px;
    margin: 0 auto;
    width: 100%;
    padding-top: 150px; /* Restored and increased to prevent overlap */
    gap: 320px; /* Increased to accommodate iPad upward extension (282px) + buffer */
  }

  .renewal-services {
    align-self: center; /* Ensure horizontal centering */
    flex-shrink: 0;
    flex-basis: auto;
    position: relative;
    height: 136px;
    color: #fdfdfd;
    font-family: 'Crimson Text', serif;
    font-size: 160px;
    font-weight: 400;
    line-height: 136px;
    text-align: center;
    white-space: nowrap;
    letter-spacing: -8px;
    z-index: 12;
    margin: 0;
    width: 100%; /* Ensure full width for centering */
  }

  .hero-image {
    align-self: stretch;
    flex-shrink: 0;
    position: relative;
    height: 362px;
    background: #005cb9;
    z-index: 13;
    border-radius: 30px;
    margin-bottom: 141px; /* Push content down to account for iPad overlap */
  }

  .ipad {
    position: absolute;
    width: 907px;
    height: 644px;
    bottom: 0; /* Align base of iPad with base of hero-image (blue shelf) */
    left: 50%;
    transform: translateX(-50%);
    background: #000000;
    border-right: 2px solid rgba(255, 255, 255, 0.5);
    border-bottom: 2px solid rgba(255, 255, 255, 0.5);
    border-left: 2px solid rgba(255, 255, 255, 0.5);
    border-top: none;
    z-index: 14;
    overflow: hidden;
    border-radius: 24px;
    box-shadow: 0 -4px 20px 0 rgba(0, 0, 0, 0.1);
  }

  /* Correct spacer to allow for bottom overlap (644 - 141 - 362 = 141) */
  .hero-image::after {
    content: '';
    display: block;
    height: 141px; 
    margin-top: 362px;
  }

  .inner-screen {
    position: relative;
    width: 869px;
    height: 607px;
    margin: 18px auto 0;
    background: url(https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/PEkeyfMcPe.png) no-repeat center;
    background-size: cover;
    z-index: 15;
    overflow: hidden;
    border-radius: 16px;
  }

  @media (max-width: 1200px) {
    .renewal-services {
      font-size: 100px;
      letter-spacing: -4px;
      height: auto;
      line-height: 1.1;
    }
    .ipad {
      width: 700px;
      height: 500px;
      top: -100px;
    }
    .hero-image::after {
        height: 100px;
    }
    .inner-screen {
      width: 660px;
      height: 460px;
    }
  }

  @media (max-width: 768px) {
    .renewal-services {
      font-size: 60px;
      letter-spacing: -2px;
    }
    .header {
        gap: 80px;
    }
    .hero-image {
        height: 200px;
    }
    .hero-image::after {
        height: 80px;
    }
    .ipad {
      width: 90%;
      height: auto;
      aspect-ratio: 907 / 644;
      top: -60px;
    }
    .inner-screen {
      width: 95%;
      height: 95%;
    }
  }
</style>
