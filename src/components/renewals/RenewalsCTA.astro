---
import Button from '../shared/Button.astro';
---
<section class="renewals-cta">
  <div class="container">
    <div class="centered-cta">
      <h2 class="connect-with-us">Connect with us</h2>
      <p class="schedule-call">
        Schedule a quick call to learn how Trexoâ€™s renewal services keep your IP assets protected and on track.
      </p>
      <div class="button-wrapper">
        <Button text="Learn More" href="/contact-us" variant="primary" />
      </div>
    </div>
  </div>
</section>

<style>
  .renewals-cta {
    background-color: #242428;
    padding: 120px 0;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .container {
    max-width: 1500px;
    width: 100%;
    padding: 0 40px;
  }

  .centered-cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 30px;
    text-align: center;
  }

  .connect-with-us {
    color: #fdfdfd;
    font-family: 'Lato', sans-serif;
    font-size: 60px;
    font-weight: 400;
    line-height: 54px;
    letter-spacing: -1.8px;
    margin: 0;
  }

  .schedule-call {
    color: #fdfdfd;
    font-family: 'Lato', sans-serif;
    font-size: 18px;
    line-height: 1.4;
    max-width: 800px;
    margin: 0;
  }

  .button-wrapper {
    margin-top: 20px;
  }

  @media (max-width: 768px) {
    .connect-with-us {
      font-size: 32px;
      line-height: 1.2;
    }
    .schedule-call {
      font-size: 16px;
    }
  }
</style>
