---
const steps = [
  {
    num: "01",
    label: "Request a free cost comparison"
  },
  {
    num: "02",
    label: "Book a demo of our platform"
  },
  {
    num: "03",
    label: "Upload your portfolio for a customised quote"
  }
];
---
<section class="renewals-get-started">
  <div class="container">
    <div class="how-it-works-section">
      <div class="header-row">
        <h2 class="get-started-today">Get Started Today</h2>
      </div>
      
      <div class="signup">
        {steps.map(step => (
          <div class="lockup">
            <span class="step-0x">{step.num}</span>
            <div class="step-label-wrapper">
              <span class="step-label-text">{step.label}</span>
            </div>
          </div>
        ))}
      </div>
    </div>

    <div class="hero-image-23">
      <div class="image-container">
        <div class="image-24"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .renewals-get-started {
    background-color: #242428;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .container {
    max-width: 1500px;
    width: 100%;
    padding: 0 40px;
  }

  .how-it-works-section {
    display: flex;
    flex-direction: column;
    gap: 80px;
    padding: 80px 0 120px 0;
    border-bottom: 1px solid #e8e8e8;
  }

  .get-started-today {
    color: #fdfdfd;
    font-family: 'Lato', sans-serif;
    font-size: 60px;
    font-weight: 400;
    line-height: 54px;
    letter-spacing: -1.8px;
    margin: 0;
  }

  .signup {
    display: flex;
    gap: 20px;
  }

  .lockup {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 60px;
    min-width: 240px;
    padding: 60px 30px 20px 0;
    border-bottom: 1px solid #e8e8e8;
  }

  .step-0x {
    color: #929292;
    font-family: 'DM Sans', sans-serif;
    font-size: 80px;
    font-weight: 400;
    line-height: 80px;
    letter-spacing: -3.2px;
  }

  .step-label-text {
    color: #fdfdfd;
    font-family: 'Lato', sans-serif;
    font-size: 18px;
    font-weight: 500;
    line-height: 18px;
    letter-spacing: -0.54px;
  }

  .hero-image-23 {
    padding: 120px 0;
    width: 100%;
  }

  .image-24 {
    width: 100%;
    height: 620px;
    background: url(https://codia-f2c.s3.us-west-1.amazonaws.com/image/2026-02-17/QagwZ7VT8R.png) no-repeat center;
    background-size: cover;
    border-radius: 30px;
  }

  @media (max-width: 1024px) {
    .signup {
      flex-direction: column;
    }
    .get-started-today {
      font-size: 40px;
    }
    .image-24 {
        height: 400px;
    }
  }
</style>
