---
const { 
  title = "JUNE", 
  tagline = "Trexo’s latest innovation in IP management",
  description = "Built to simplify and accelerate patent and trademark prosecution workflows. By automating critical tasks, JUNE saves time, reduces costs, and ensures unmatched accuracy—helping IP teams work smarter, faster, and more efficiently."
} = Astro.props;
---

<section class="june-hero">
  <div class="watermark">june</div>
  <div class="container hero-content">
    <div class="text-side reveal">
      <h1 class="font-display">{title}</h1>
      <p class="tagline">{tagline}</p>
      <p class="description">{description}</p>
      <div class="actions">
        <a href="#demo" class="btn-primary">Request Demo</a>
      </div>
    </div>
    <div class="visual-side reveal delay-1">
      <div class="ui-mockup">
        <div class="mockup-header">
          <div class="dot red"></div>
          <div class="dot yellow"></div>
          <div class="dot green"></div>
        </div>
        <div class="mockup-body">
          <div class="skeleton line-title"></div>
          <div class="skeleton line-text"></div>
          <div class="skeleton line-text"></div>
          <div class="assistant-bubble">
            <span class="pulse"></span>
            JUNE Assistant
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .june-hero {
    position: relative;
    padding: 160px 0 100px;
    background-color: var(--color-dark);
    overflow: hidden;
    min-height: 90vh;
    display: flex;
    align-items: center;
  }
  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    padding: var(--content-padding);
  }
  .watermark {
    position: absolute;
    top: 50%;
    left: 10%;
    transform: translateY(-50%);
    font-family: var(--font-display);
    font-size: 30vw;
    color: rgba(255, 255, 255, 0.03);
    pointer-events: none;
    line-height: 1;
    z-index: 1;
  }
  .text-side {
    position: relative;
    z-index: 2;
  }
  h1 {
    font-size: 120px;
    color: var(--color-white);
    margin-bottom: 20px;
    letter-spacing: 4px;
  }
  .tagline {
    font-size: 24px;
    color: var(--color-secondary);
    font-weight: 500;
    margin-bottom: 30px;
    letter-spacing: 1px;
  }
  .description {
    font-size: 18px;
    line-height: 1.8;
    color: var(--color-text-muted);
    max-width: 500px;
    margin-bottom: 40px;
  }
  .visual-side {
    position: relative;
    z-index: 2;
  }
  .ui-mockup {
    background: #2a2a2e;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 40px 100px rgba(0,0,0,0.5);
    overflow: hidden;
  }
  .mockup-header {
    background: #343438;
    padding: 12px 20px;
    display: flex;
    gap: 8px;
  }
  .dot { width: 8px; height: 8px; border-radius: 50%; }
  .red { background: #ff5f57; }
  .yellow { background: #ffbd2e; }
  .green { background: #28c940; }
  .mockup-body {
    padding: 40px;
    height: 300px;
    position: relative;
  }
  .skeleton { background: rgba(255,255,255,0.05); border-radius: 4px; margin-bottom: 15px; }
  .line-title { width: 60%; height: 20px; }
  .line-text { width: 100%; height: 12px; }
  .assistant-bubble {
    position: absolute;
    bottom: 40px;
    right: 40px;
    background: var(--color-primary);
    color: white;
    padding: 12px 24px;
    border-radius: 100px;
    font-size: 14px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 10px;
    box-shadow: 0 10px 20px rgba(0,92,185,0.3);
  }
  .pulse {
    width: 8px;
    height: 8px;
    background: white;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }
  @keyframes pulse {
    0% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.5); opacity: 0.5; }
    100% { transform: scale(1); opacity: 1; }
  }

  @media (max-width: 1200px) {
    .june-hero { padding: 120px 0; }
    h1 { font-size: 80px; }
  }
  @media (max-width: 992px) {
    .hero-content { grid-template-columns: 1fr; text-align: center; }
    .description { margin-left: auto; margin-right: auto; }
    .watermark { left: 50%; transform: translate(-50%, -50%); }
    .visual-side { display: none; }
  }
</style>
