  }

  .col a:hover { color: var(--color-primary); }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid #eee;
    padding-top: 40px;
    font-size: 13px;
    color: #999;
  }

  @media (max-width: 992px) {
    .logo-big { font-size: 4rem; }
    .links-columns { grid-template-columns: 1fr 1fr; }
  }

  @media (max-width: 576px) {
    .links-columns { grid-template-columns: 1fr; }
  }
</style>
