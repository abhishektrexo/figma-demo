<style>
  .footer {
    background-color: #f8faff;
    color: #333;
    padding: 80px 0 20px;
    position: relative;
    overflow: hidden;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
    margin-bottom: 60px;
    position: relative;
    z-index: 2;
  }

  .footer-col h4 {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 25px;
    color: #2c3e50;
  }

  .footer-col ul {
    list-style: none;
  }

  .footer-col ul li {
    margin-bottom: 12px;
  }

  .footer-col ul a {
    font-size: 0.9rem;
    color: #555;
    transition: color 0.2s;
  }

  .footer-col ul a:hover {
    color: var(--color-primary);
  }

  .footer-brand {
    position: relative;
    height: 150px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .brand-bg {
    font-size: 8rem;
    font-weight: 900;
    color: rgba(0, 86, 179, 0.05);
    letter-spacing: 15px;
    text-align: center;
    white-space: nowrap;
    user-select: none;
  }

  .footer-bottom {
    border-top: 1px solid rgba(0, 0, 0, 0.05);
    padding-top: 20px;
  }

  .bottom-container {
    display: flex;
    justify-content: space-between;
    font-size: 0.8rem;
    color: #888;
  }

  @media (max-width: 992px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .brand-bg {
      font-size: 4rem;
    }
  }

  @media (max-width: 576px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
